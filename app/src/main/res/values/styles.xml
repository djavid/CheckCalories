<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/butterscotch</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_check_sheet</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

</resources>
