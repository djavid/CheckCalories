<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.djavid.checksonline.view.root.RootActivity"
    tools:ignore="MissingPrefix, ContentDescription">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_check_sheet"
            android:elevation="5dp"
            android:focusableInTouchMode="true"
            android:paddingStart="1dp"
            android:paddingEnd="1dp">

            <ImageView
                android:id="@+id/checkLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/checkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gillsans"
                android:textColor="@color/black"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkLogo"
                tools:text="ООО Вкусвилл" />

            <TextView
                android:id="@+id/checkAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alpha="0.7"
                android:fontFamily="@font/gillsans"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/greyish_brown"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkTitle"
                tools:text="Ул. Маршала Малиновского, дом 8"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/checkTotalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/gillsans"
                android:textColor="@color/pumpkin_orange"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkAddress"
                tools:text="507.84 ₽" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goods_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/checkTotalSum"
                tools:itemCount="10"
                tools:listitem="@layout/item_good"
                tools:visibility="visible" />

            <include
                layout="@layout/layout_progress"
                android:visibility="invisible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
