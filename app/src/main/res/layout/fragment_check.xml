<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_check_panel"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    tools:context="com.djavid.checksonline.features.root.RootActivity"
    tools:ignore="MissingPrefix, ContentDescription">

    <View
        android:id="@+id/check_line"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9"
        android:background="@color/black_lighter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mindorks.placeholderview.PlaceHolderView
        android:id="@+id/goods_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/check_line"
        tools:itemCount="10"
        tools:listitem="@layout/item_good" />

    <include
        layout="@layout/layout_progress"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
